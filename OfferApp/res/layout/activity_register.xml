<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.offerapp.RegisterActivity" 
    android:background="@drawable/lsy6"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/register_user_edit"
        android:layout_marginTop="36dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="密码：" />

    <EditText
        android:id="@+id/register_password_edit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/register_user_edit"
        android:textColor="#000000"
        android:background="@drawable/shape"
        android:ems="10" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/register_password_edit"
        android:layout_below="@+id/register_password_edit"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnshape1"
        android:text="注册" />

    <EditText
        android:id="@+id/register_user_edit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:textColor="#000000"
        android:background="@drawable/shape"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:text="用户名："
        android:textColor="#000000"
        android:textSize="20dp" />
    
</RelativeLayout>
